# Operating mode: mcp or terminal
MODE=terminal

# AI provider (used in terminal mode)
AI_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-haiku-20241022

# Minecraft server configuration
MC_HOST=localhost
MC_PORT=25565
MC_USERNAME=BotGirl
MC_VERSION=1.20.1
MC_AUTH=offline

# Non-premium server authentication
AUTO_REGISTER=true
BOT_PASSWORD=ChangeThisPassword123

# Bot personality
BOT_GENDER=female
BOT_PERSONALITY=shy
BOT_MENTION_PREFIX=@

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Advanced connection settings
MAX_RECONNECT_ATTEMPTS=10
RECONNECT_DELAY_MS=5000
ENABLE_VIEWER=false
VIEWER_PORT=3000

# Movement
MOVEMENT_TIMEOUT_MS=45000
