{
  "name": "minecraft-mcp-server",
  "version": "1.0.0",
  "description": "Minecraft bot with MCP and terminal modes",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start:mcp": "npm run build && cross-env MODE=mcp node dist/index.js",
    "start:terminal": "npm run build && cross-env MODE=terminal node dist/index.js",
    "dev:mcp": "cross-env MODE=mcp ts-node src/index.ts",
    "dev:terminal": "cross-env MODE=terminal ts-node src/index.ts",
    "test:connection": "cross-env MODE=mcp ts-node src/core/__tests__/test-connection.ts",
    "test:auth": "cross-env MODE=mcp ts-node src/auth/__tests__/test-auth.ts",
    "test:movement": "cross-env MODE=mcp ts-node src/movement/__tests__/test-movement.ts"
  },
  "keywords": [
    "minecraft",
    "bot",
    "mcp",
    "mineflayer",
    "typescript"
  ],
  "license": "GPL-3.0",
  "dependencies": {
    "dotenv": "^17.2.3",
    "minecraft-data": "^3.100.0",
    "mineflayer": "^4.35.0",
    "mineflayer-pathfinder": "^2.4.5",
    "openai": "^6.5.0",
    "vec3": "^0.1.10",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@types/winston": "^2.4.4",
    "cross-env": "^10.1.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
